@model ImageServiceWeb.Models.LogsModel

@{
    ViewBag.Title = "Logs";
}

@using (Html.BeginForm("Logs", "First", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h1>Logs</h1>
        <hr />

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(m => m.FilterBy, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.FilterBy, new { @class = "form-control" })
            </div>
       </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Filter!" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<br />
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(m => m.Type)
        </th>
        <th>
            @Html.DisplayNameFor(m => m.Info)
        </th>
    </tr>

    @foreach (var item in Model.FilterdLogs)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.logType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.logInfo)
            </td>
        </tr>
    }

</table>



