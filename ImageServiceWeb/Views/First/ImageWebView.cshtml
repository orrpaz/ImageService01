@model ImageServiceWeb.Models.ImageWebModel

@{
    ViewBag.Title = "Image Web";
}


<h2>Image Web</h2>

<p id="greetings">Good Evening!</p>
<p id="status">Server is not active</p>

<script>
if (new Date().getHours() < 16) {
    document.getElementById("greetings").innerHTML = "Good day!";
}
    if (@Model.IsConnected > 0) {
    document.getElementById("status").innerHTML = "Service is Active!";
}
</script>


<p>The number of the images is @Model.ImageCount</p> <br />


<table class="table">
    <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>ID</th>
        <th></th>
    </tr>
    @foreach (var item in Model.Students)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ID)
            </td>
        </tr>
    }
</table>

